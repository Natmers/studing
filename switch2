#include <iostream>
#include <windows.h>
#include <math.h>

using namespace std;
double sum, e, a, b, c, x;
int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    int number;
    cout << "Введіть від 1 до 3: ";
    cin >> number;
    switch (number) {
    case 1: { cout << "a = 4.2; b = 5.3; c = 1.5;\n"; a = 4.2; b = 5.3; c = 1.5; break; }
    case 2: { cout << "a = -0.35; b = 1.8; c = -1.8;\n"; a = -0.35; b = 1.8; c = -1.8; break; }
    case 3: { cout << "a = 2.8; b = -0.6; c = 2.0;\n"; a = 2.8; b = -0.6; c = 2.0; break; }
    default: cout << "Помилка! Такий вибір недоступний!" << endl;
    }

    if (exp(a + b) > exp(x)) {
        sum = sin(exp(a + b)) + (x * x);
    }
    else if (exp(a + b) == exp(x)) {
        sum = atan(a * b * c) + pow(x, 1. / 3);
    }
    else {
        sum = cos(sqrt(fabs(x + a * b * c)));
    }

    cout << "Результат: " << sum << endl;

    return 0;
}
